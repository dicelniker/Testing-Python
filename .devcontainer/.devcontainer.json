{
    "name": "Python Codespace",
    // You can use a pre-built image, like the one below, 
    // or specify a Dockerfile if you need custom software.
    "image": "mcr.microsoft.com/devcontainers/python:3.11", 

    // --- Part 1: Install the Python Extension ---
    // This array tells VS Code to install the specified extensions 
    // inside the container immediately upon creation.
    "customizations": {
        "vscode": {
            "extensions": [
                // The official Microsoft Python extension
                "ms-python.python",
                // The Debugger is also helpful
                "ms-python.debugpy" 
            ]
        }
    },
    // --- ADD THESE SETTINGS ---
    "settings": {
        // 1. Prevents the AI features (Chat & Inline Suggest) from running/displaying.
        "chat.disableAIFeatures": true,

        // 2. Prevents the side panel from opening by default when it contains AI chat.
        // 'secondarySideBar' is the right-hand panel where AI chat typically opens.
        "workbench.secondarySideBar.defaultVisibility": "hidden"
    }
}
